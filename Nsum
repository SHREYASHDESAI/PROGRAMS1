import java.util.Scanner;
public class Nsum {
    public static int sum(int n)
    {
        int i,a=0;
        for(i=1;i<=n;i++)
        {
            a = a + i;
        }
        return a;
    }
    public static void main() {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter values of n:");
        int n = sc.nextInt();
        int s = sum(n);
        System.out.println(s);

    }
}


